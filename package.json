{
    "name": "filerica",
    "version": "0.0.2",
    "description": "CLI for easy file classification",
    "main": "dist/src/app.js",
    "preferGlobal": true,
    "bin": {
        "filerica": "dist/src/app.js"
    },
    "files": [
        "dist",
        "!**/dist/setting",
        "doc"
    ],
    "scripts": {
        "start": "node ./dist/src/app.js",
        "build": "tsc ; gsed -i -e '1i #!/usr/bin/env node\n' ./dist/src/app.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "cli",
        "file",
        "student"
    ],
    "bugs": "https://github.com/airRnot1106/filerica/issues",
    "author": "airRnot1106 <yngw.rintaro@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/airRnot1106/filerica"
    },
    "dependencies": {
        "iconv": "^3.0.1",
        "jschardet": "^3.0.0",
        "litargs": "^0.3.2",
        "properties-reader": "^2.2.0"
    },
    "devDependencies": {
        "@types/iconv": "^3.0.1",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.5.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    }
}
